<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Admin Setting"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/successColor"/>

        <CheckBox
            android:id="@+id/chbusecategoryreplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use Category Replace"
            android:padding="20dp"
            android:textColor="@color/colorPrimary"/>
        <CheckBox
            android:id="@+id/chbfindbycategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:padding="20dp"
            android:text="Find By Category Name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Client Setting"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/successColor"/>

        <CheckBox
            android:id="@+id/chbuseslide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use SlideShow"
            android:padding="20dp"
            android:textColor="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnsave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_weight="1"
                android:text="Save"
                android:layout_margin="20dp"
                android:background="@color/successColor"
                android:textColor="@color/colorWhite"/>
            <Button
                android:id="@+id/btncancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:layout_margin="20dp"
                android:background="@color/errorColor"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>